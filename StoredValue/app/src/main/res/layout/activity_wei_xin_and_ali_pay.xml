<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_pos"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/size_55"
        android:background="@color/colorPrimary" >

        <LinearLayout
            android:id="@+id/ll_pay_type_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:src="@mipmap/icon_back"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="返回"
                android:textSize="@dimen/font_16"
                android:textColor="@color/white"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_pay_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="微信支付"
            android:textSize="@dimen/font_16"
            android:textColor="@color/white"/>

    </RelativeLayout>

    <EditText
        android:id="@+id/tv_show_msg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:textColor="#000000"
        android:background="@null"
        android:gravity="center"
        android:textSize="@dimen/font_16"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="@dimen/size_60"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_pay_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_pay_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_22"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_qrcode_pay"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/black"
                android:drawableTop="@mipmap/qrcode"
                android:drawablePadding="20dp"
                android:text="二维码收款"
                android:textSize="@dimen/font_20" />

            <TextView
                android:id="@+id/tv_scan_pay"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/black"
                android:drawableTop="@mipmap/scan_pay"
                android:drawablePadding="20dp"
                android:text="扫描收款"
                android:textSize="@dimen/font_20"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_50"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_shou_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="应收金额"
            android:textSize="@dimen/font_20"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/tv_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_shou_amount"
                android:textSize="@dimen/font_26"
                android:textColor="@color/dimgrey1"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_amount"
                android:text="元"
                android:textSize="@dimen/font_20"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请商家使用上方收款方式进行收款"
                android:textSize="@dimen/font_20"
                android:textColor="@color/black"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
